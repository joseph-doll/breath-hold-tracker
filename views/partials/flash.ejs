<div class="container-fluid">
<% if(success && success.length) {%> 
    <div class="alert alert-success alert-dismissible fade show text-center col-md-6 offset-md-3 py-1 mt-3 mb-4" role="alert">
        <%= success %>
        <button type="button" class="btn-close btn-sm pb-2 pt-2" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<% if(error && error.length) {%> 
    <div class="alert alert-danger alert-dismissible fade show text-center col-md-6 offset-md-3 py-1 mt-3 mb-4" role="alert">
        <%= error %>
        <button type="button" class="btn-close btn-sm pb-2 pt-2" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>
</div>