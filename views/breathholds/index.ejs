<% layout('layouts/boilerplate') %> 
<div class="col-md-6 offset-md-3">
    <div class="card border-0">
        <h1 class="card-title text-center">BREATH HOLDS INDEX</h1>
    </div>
    <div class="card mx-1 my-2 border-0">
        <a href="/breathholds/new" role="button" class="btn btn-primary btn-sm mb-2">NEW HOLD</a>
        <a href="/breathholds/timer" role="button" class="btn btn-info btn-sm" style="color: white;">TIMER</a>
    </div>
        <% for (let breathhold of breathholds) { %> 
            <div class="card mx-1 my-2">
                <div class="card-body p-2">
                  <h6 class="card-title mb-1"><%= breathhold.name %> - <%= breathhold.duration %>s</h6>
                  <p class="card-text text-muted mb-0" style="font-size: .8rem;"><%= breathhold.createdAt.toLocaleString('en-US')%></p>
                  <a href="/breathholds/<%= breathhold._id%>" style="font-size: .8rem">MORE DETAILS</a>
                </div>
            </div>
        <% } %> 
    </div>
</div>