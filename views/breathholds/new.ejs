<% layout('layouts/boilerplate') %> 
<div class="container-fluid">
    <h4 class="text-center">NEW HOLD</h4>
        <form action="/breathholds" method="POST" class="validated-form" novalidate>
            <div class="mb-1">
                <label class="form-label mb-0 mt-1" for="name" >Name</label>
                <input class="form-control" type="text" id="name" name="breathhold[name]" value="<%= name %> " required/>
            </div>
            <div class="mb-1">
                <label class="form-label mb-0 mt-1" for="duration">Duration</label>
                <input class="form-control" type="text" id="duration" name="breathhold[duration]" required autofocus/>
                <div id="nameHelp" class="form-text text-muted" style="font-size: .7rem;"><i>seconds</i></div>
            </div>
            <div class="mb-1">
                <label class="form-label mb-0 mt-1" for="comments">Comments</label>
                <input class="form-control" type="text" id="comments" name="breathhold[comments]" required/>
                <div id="commentsHelp" class="form-text text-muted" style="font-size: .7rem;"><i>Say whatever, max length 140 characters.</i></div>
            </div>
            <div class="mb-1">
                <label class="form-label mb-0 mt-1" for="notes">Notes</label>
                <input class="form-control" type="text" id="notes" name="breathhold[notes]" required/>
                <div id="notesHelp" class="form-text text-muted" style="font-size: .7rem;"><i>For your records only. Will not be displayed to other users</i></div>
            </div>
            <div class="d-grid gap-2 pb-3 mt-3">
                <button class="btn btn-primary">SUBMIT HOLD</button>
            </div>
        </form>
</div>
